local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Criar GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "SimpleSpyGUI"
ScreenGui.Parent = game:GetService("CoreGui")

-- Frame principal
local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 500, 0, 350)
Frame.Position = UDim2.new(0, 20, 0, 100)
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true
Frame.Parent = ScreenGui

-- T√≠tulo
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, -40, 0, 30)
Title.Position = UDim2.new(0, 10, 0, 0)
Title.Text = "üîç SimpleSpy - Joaquim"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.GothamBold
Title.TextSize = 16
Title.TextXAlignment = Enum.TextXAlignment.Left
Title.Parent = Frame

-- Bot√£o de fechar
local CloseButton = Instance.new("TextButton")
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(1, -35, 0, 0)
CloseButton.Text = "X"
CloseButton.BackgroundColor3 = Color3.fromRGB(180, 60, 60)
CloseButton.TextColor3 = Color3.new(1, 1, 1)
CloseButton.Font = Enum.Font.GothamBold
CloseButton.TextSize = 14
CloseButton.Parent = Frame
CloseButton.MouseButton1Click:Connect(function()
	ScreenGui:Destroy()
end)

-- √Årea de rolagem
local ScrollingFrame = Instance.new("ScrollingFrame")
ScrollingFrame.Size = UDim2.new(1, -20, 1, -45)
ScrollingFrame.Position = UDim2.new(0, 10, 0, 35)
ScrollingFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
ScrollingFrame.BorderSizePixel = 0
ScrollingFrame.ScrollBarThickness = 6
ScrollingFrame.CanvasSize = UDim2.new(0, 0, 1, 0)
ScrollingFrame.Parent = Frame

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.Padding = UDim.new(0, 6)
UIListLayout.Parent = ScrollingFrame

-- Adiciona log
local function addLog(txt)
	local container = Instance.new("Frame")
	container.Size = UDim2.new(1, 0, 0, 70)
	container.BackgroundTransparency = 1
	container.Parent = ScrollingFrame

	local label = Instance.new("TextLabel")
	label.Size = UDim2.new(1, -80, 1, 0)
	label.Position = UDim2.new(0, 0, 0, 0)
	label.BackgroundTransparency = 1
	label.TextColor3 = Color3.fromRGB(200, 255, 200)
	label.TextWrapped = true
	label.TextXAlignment = Enum.TextXAlignment.Left
	label.Font = Enum.Font.Code
	label.TextSize = 14
	label.Text = txt
	label.Parent = container

	local copyBtn = Instance.new("TextButton")
	copyBtn.Size = UDim2.new(0, 70, 0, 25)
	copyBtn.Position = UDim2.new(1, -75, 1, -28)
	copyBtn.BackgroundColor3 = Color3.fromRGB(60, 120, 255)
	copyBtn.Text = "Copiar"
	copyBtn.TextColor3 = Color3.new(1, 1, 1)
	copyBtn.Font = Enum.Font.GothamBold
	copyBtn.TextSize = 13
	copyBtn.Parent = container

	copyBtn.MouseButton1Click:Connect(function()
		setclipboard(txt)
	end)

	task.wait(0.1)
	ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, UIListLayout.AbsoluteContentSize.Y + 10)
end

-- Hook no __namecall
local mt = getrawmetatable(game)
setreadonly(mt, false)
local old = mt.__namecall

mt.__namecall = newcclosure(function(self, ...)
	local args = {...}
	local method = getnamecallmethod()

	if method == "FireServer" or method == "InvokeServer" then
		local tipo = method == "FireServer" and "RemoteEvent" or "RemoteFunction"
		local info = "üîé [" .. tipo .. "] " .. tostring(self:GetFullName()) .. "\n"
		for i, v in ipairs(args) do
			info = info .. "   [" .. i .. "] = " .. tostring(v) .. "\n"
		end
		addLog(info)
	end

	return old(self, unpack(args))
end)

setreadonly(mt, true)

addLog("‚úÖ SimpleSpy GUI do Joaquim carregado com sucesso!")
