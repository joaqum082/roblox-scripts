-- SimpleSpy GUI feito por Joaquim e ChatGPT üòé

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local StarterGui = game:GetService("StarterGui")

-- üß± Cria uma tela com rolagem e logs
local ScreenGui = Instance.new("ScreenGui", game:GetService("CoreGui"))
ScreenGui.Name = "SimpleSpyGui"

local Frame = Instance.new("Frame", ScreenGui)
Frame.Position = UDim2.new(0, 20, 0, 100)
Frame.Size = UDim2.new(0, 400, 0, 300)
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true

local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1, 0, 0, 25)
Title.Text = "SimpleSpy - Feito por Joaquim"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.GothamBold
Title.TextSize = 16

local ScrollingFrame = Instance.new("ScrollingFrame", Frame)
ScrollingFrame.Position = UDim2.new(0, 10, 0, 30)
ScrollingFrame.Size = UDim2.new(1, -20, 1, -40)
ScrollingFrame.CanvasSize = UDim2.new(0, 0, 5, 0)
ScrollingFrame.BackgroundTransparency = 0.1
ScrollingFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
ScrollingFrame.BorderSizePixel = 0
ScrollingFrame.ScrollBarThickness = 6

local UIListLayout = Instance.new("UIListLayout", ScrollingFrame)
UIListLayout.Padding = UDim.new(0, 5)

-- Fun√ß√£o para adicionar texto no painel
local function addLog(text)
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -10, 0, 40)
    label.Text = text
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.fromRGB(200, 255, 200)
    label.TextWrapped = true
    label.Font = Enum.Font.Code
    label.TextSize = 14
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = ScrollingFrame
end

-- Hook de namecall (o cora√ß√£o do spy)
local mt = getrawmetatable(game)
setreadonly(mt, false)
local old = mt.__namecall

mt.__namecall = newcclosure(function(self, ...)
    local args = {...}
    local method = getnamecallmethod()

    if method == "FireServer" or method == "InvokeServer" then
        local callType = (method == "FireServer" and "RemoteEvent") or "RemoteFunction"
        local info = "üîç [" .. callType .. "] " .. tostring(self:GetFullName()) .. "\n"
        for i, v in ipairs(args) do
            info = info .. "   [" .. i .. "] = " .. tostring(v) .. "\n"
        end
        addLog(info)
    end

    return old(self, unpack(args))
end)

setreadonly(mt, true)

addLog("‚úÖ SimpleSpy GUI Iniciado!")
